;;; -*- lisp-data -*-
((:name "Run Wayland"
        :command "odin run src -debug"
        :type "compile"
        :environment ("DISPLAY="))
 (:name "Build debug"
        :command "odin build main -debug -out:build/debug"
        :type "compile")
 (:name "Test"
        :command "odin test main -all-packages"
        :type "compile")
 (:name "Debug"
        :command ("odin build main -debug -out:build/debug"
                  "gdb --tui ./build/debug")
        :type "eat")
 (:name "Compile and run"
        :command ("mkdir -p build"
                  "odin run main -out:build/main")
        :type "compile"))